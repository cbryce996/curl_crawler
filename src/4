#include <queue>
#include <vector>
#include <thread>
#include <mutex>
#include <semaphore>
#include "task.h"

class pool
{
private:
	const int THREADS;
	bool stopped = false;
	std::queue<task*> tasks_queue;
	std::mutex tasks_mutex;
	std::vector<std::thread> threads_vector;
	std::counting_semaphore<0> tasks_semaphore;

public:
	void schedule_task(task*);
	task read_task();
	void wait_thread(std::thread);
	void stop_pool():
	void initialize_pool();
};
